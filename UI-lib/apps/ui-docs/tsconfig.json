{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Storybook",
  "extends": "tsconfig/base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "noEmit": true,
    "target": "es5",
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "ui/*": ["../../packages/ui/src/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["**/*.ts", "**/*.tsx"],

}
